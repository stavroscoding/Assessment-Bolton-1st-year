import java.util.Scanner;  // Import Scanner class for reading user input

public class Largest_of_Three {
    public static void main(String[] args) {
            // We create a Scanner object to read input
            Scanner scanner = new Scanner(System.in);

            // We prompt the user and read three numbers
            System.out.print("Enter the first number user: ");
            double number1 = scanner.nextDouble();

            System.out.print("Enter the second number user: ");
            double number2 = scanner.nextDouble();

            System.out.print("Enter the third number user: ");
            double number3 = scanner.nextDouble();

            // Close the scanner to free up resources
            scanner.close();

            // Start by assuming num1 is the largest
            double largest = number1;

            // Compare largest with num2; if num2 is greater, update largest
            if (number2 > largest) {
                largest = number2;
            }

            // Compare the current largest with num3; update if num3 is greater
            if (number3 > largest) {
                largest = number3;
            }

            // Print out the result
            System.out.println("The largest number between the 3 is: " + largest);
        }
    }
